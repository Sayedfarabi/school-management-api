generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  phone         String   @unique
  password_hash String
  role          UserRole
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // student       Student?

  @@map("users")
}

